{
    "source": {
        "include": ["./docs/sources"],
        "includePattern": ".ts$",
        "excludePattern": "(node_modules/|docs/|build)"
    },
    "plugins": [
        "plugins/markdown",
        "node_modules/better-docs/typescript"
    ],
    "typescript": {
      "moduleRoot": "./docs/sources"
    },
    "opts": {
        "template": "node_modules/better-docs",
        "encoding": "utf8",
        "readme": "./readme.md",
        "destination": "docs/generated",
        "recurse": true,
        "verbose": true
    }
}